[user]
	name = Joshua Ramsbottom
	email = joshuaramsbottom@gmail.com
[core]
    editor = vim
    excludesfile = ~/.gitexcludes
	autocrlf = input
[color]
    ui = true
[push]
    default = simple
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
	conflictstyle = merge
[mergetool]
    keepbackup = false
[include]
    path = ~/.gitconfig_local
[alias]
    s = status -sb
    b = branch
    c = commit -v
    a = add
    co = checkout
    l = pull
    p = push
    f = fetch
    mt = mergetool
    m = merge
    r = remote
    re = rebase
    lg = log --stat
    d = diff
